# LLM-CAD Integration System Environment Variables
# Copy this file to .env and fill in your actual values

# Claude API Key (Required)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# OpenAI API Key (Optional - for alternative LLM)
# OPENAI_API_KEY=sk-your-openai-key-here

# System Configuration
LOG_LEVEL=INFO
DEBUG_MODE=false

# Output Directories
OUTPUT_DIR=./output
TEMP_DIR=./temp

# CAD Generation Settings
DEFAULT_DXF_VERSION=R2018
DEFAULT_WALL_THICKNESS=0.2
DEFAULT_DOOR_WIDTH=0.9
DEFAULT_WINDOW_WIDTH=1.5

# MCP Server Configuration
CAD_MCP_SERVER_HOST=localhost
CAD_MCP_SERVER_PORT=3000
SCHEMA_MCP_SERVER_PORT=3001

# Database (Optional - for Phase 3)
# DATABASE_URL=postgresql://user:password@localhost:5432/llm_cad
# REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_REVIT_AGENT=false
ENABLE_RHINO_AGENT=false
ENABLE_COMPLIANCE_CHECK=false
ENABLE_QA_AUTOMATION=false
